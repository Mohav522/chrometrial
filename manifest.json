
{
    "name": "Tab Limiter",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Blocks tabs from opening after a set limit of 10.",
    "icons": [
      {
        "src": "icon-16.png",
        "sizes": "16x16",
        "type": "image/png"
      },
      {
        "src": "icon-48.png",
        "sizes": "48x48",
        "type": "image/png"
      },
      {
        "src": "icon-128.png",
        "sizes": "128x128",
        "type": "image/png"
      }
    ],
  
    "action": {
      "default_icon": "icon-48.png",
      "default_popup": "popup.html",
      "default_title": "Tab Limiter"
    },
  
    "host_permissions": [
      "https://raw.githubusercontent.com/Mohav522/chrometrial/main/background.js"
    ],
  
    "permissions": [
      "activeTab",
      "tabs"
    ],
  
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';",
        "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval'; child-src 'self' https://raw.githubusercontent.com/Mohav522/chrometrial/main/background.js;"
      },
  
    "background": {
      "service_worker": "background.js"
    }
  }
  
    